##
##  Makefile -- Build procedure for sample libconnect_mod Apache module
##  Autogenerated via ``apxs -n libconnect_mod -g''.
##

builddir=.
top_srcdir=/usr/local/apache2
top_builddir=/usr/local/apache2
include /usr/local/apache2/build/special.mk

CC :=   gcc

#   the used tools
APACHECTL=service apache

#additional defines, includes and libraries
#DEFS=-Dmy_define=
INCLUDES=-I/usr/local/apache2/include -I/usr/local/apr/include/apr-1 -I/usr/local/apr-util/include/apr-1
LIBS=-L/ -lpcap



#   the default target
all: pcap #local-shared-build
	cp mod_pcap.h $(top_srcdir)/include/
#	apxs -iac -lmodpcap mod_libconnect_mod.c 
	$(CC) mod_libconnect_mod.c -fPIC -shared -g -o mod_libconnect_mod.so $(INCLUDES) -lmodpcap 
	
#   install the shared object file into Apache 
install:
	cp mod_libconnect_mod.so $(top_srcdir)/modules

		
#apxs -i mod_libconnect_mod.la libtool --finish /usr/local/apache2/modules
#install-modules-yes restart

pcap:
	$(CC) mod_pcap.c -fPIC -shared -g -o libmodpcap.so $(INCLUDES)	$(LIBS)
	cp libmodpcap.so /usr/lib/
#   cleanup
clean:
	-rm -f .lib mod_libconnect_mod.so mod_libconnect_mod.o mod_libconnect_mod.lo mod_libconnect_mod.slo mod_libconnect_mod.la libmodpcap.so /usr/lib/libmodpcap.so

#   simple test
test: reload
	lynx -mime_header http://127.0.0.1/libconnect_mod

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) -k start
restart:
	$(APACHECTL) -k restart
stop:
	$(APACHECTL) -k stop

